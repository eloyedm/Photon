{% block stylesheets %}<link rel="stylesheet" href="{{ asset('bundles/photom/css/font-awesome.min.css')}}" media="screen" title="no title" charset="utf-8">
<link href="{{ asset('bundles/photom/node_modules/slick-carousel/slick/slick.css')}}" rel="stylesheet" type="text/css"/>
<link href="{{ asset('bundles/photom/node_modules/slick-carousel/slick/slick-theme.css')}}" rel="stylesheet" type="text/css"/>
<link href="{{ asset('bundles/photom/css/registerConfirm.css')}}" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset("bundles/photom/js/dist/register.bundle.js") }}"> </script>
{% endblock %}
{% block Body %}
  <div id="infoMainContainer">
    <div id="title">
</div>
      <form class="registerExtra" method="POST" id="extraInfoForm" enctype="multipart/form-data" name="extraInfoForm" action="/complete/registration/info">
        <div id="preguntasExtras">
          <div class="pregunta">
            <span>¿Que dia naciste?</span>
            <input type="date" name="fechaNacimiento" value="" id="datepicker">
          </div>
          <div class="pregunta">
            <span>¿Donde vives?</span>
            <input type="address" name="domicilio" value="">
            <select class="pais" name="pais">
              {% for pais in paises %}
                  <option value="{{ pais.idPais}}">{{pais.nombrePais}}</option>
              {% endfor %}
            </select>
          </div>
          <div class="pregunta">
            <span>¿Que tal una foto para decorarla portada de tu perfil?</span>
            <input type="file" name="banner" value="">
          </div>
          <div class="pregunta">
            <span>Cuentanos un poco mas sobre ti</span>
            <input type="textarea" name="descripcion" value="">
          </div>
          <div class="pregunta">
            <span>¿Quien te gustaria que pueda ver tu cuenta?</span>
            <input type="radio" name="privacidad" value=1 checked/><span>Publica</span>
            <input type="radio" name="privacidad" value=0/><span>Privada</span>
          </div>
          <div class="pregunta" style="height:auto">
            <span>Por tu seguridad, responde alguna de las preguntas de seguridad par apoder reestablecer tu contraseña si es necesario</span>
            {% for question in questions %}
              <div class="contenedorPregunta" id="{{question.idPregunta}}">
                <input type="checkbox" class="checkPregunta" name="checkPregunta-{{question.idPregunta}}" value="{{question.idPregunta}}">
                <span class="textoPregunta"> {{ question.preguntaUno }}</span>
                <input type="text" name="respuesta-{{question.idPregunta}}" readonly="true"value="">
              </div>
            {% endfor %}
            <input type="submit" name="name" value="">
          </div>
        </div>
      </form>
     <img src="{{ asset('/bundles/photom/images/fotografo.png')}}">
    </div>
    <div style="width:100%;height:10%;background-color:#ffffff;margin:0;margin-top:-131px;">
    </div>
{% endblock %}
