
{% block stylesheets %}
<link href="{{ asset('bundles/photom/css/font-awesome.css')}}" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block Body %}
{% if publicacion is defined %}
<div class="container-cardsuser">
        <div class="card">
            <p class="hidden idPub" >{{ publicacion.idContenido}}</p>
            <div>
              <img class="user-image-publication"  src="data:image/jpeg;base64,{{ publicacion.perfilUsuario}}">
              <span class="user-name">{{ publicacion.username_canonical }}:</span>
            </div>
            <div class="descritpion-user-publication"><p class="description-video">{{ publicacion.descripcionContenido}} </p>
              {% if publicacion.own == true %}
                <button type="button" class="editarContenido" name="button"><i class="fa fa-pencil" aria-hidden="true"></i></button>
                <button type="button" class="borrarContenido" name="button"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
              {% endif %}
            </div>
            {% if publicacion.imagenContenido != NULL %}
            <img src="data:image/jpeg;base64,{{publicacion.imagenContenido}}" alt="Avatar" id="user-public-image">
            {% else %}
            <video src="uploads/videos/{{publicacion.videoContenido}}" controls="true" width="100%" >
            </video>
            {% endif %}

            <div class="container">
            <div class="container-interact-button">
              <button class="dislike-button" id="dislike-button" type="button"><i class="fa fa-thumbs-down" aria-hidden="true"></i>
              </button>
              <button id="comment-button"><i class="fa fa-comments" aria-hidden="true"></i>
              </button>
              <button  class="like-button" id="like-button" type="button"><i class="fa fa-heart" aria-hidden="true"></i>
              </button>
            </div>
            <div class="container-comment">
                <input type="text" placeholder="Â¿Quieres decir algo sobre este post?..." id="comment-input">
            </div>
            <div class="comentarios">
                <ul class="list-group-comments">
                    {% for comments in publicacion|last %}
                        <li href="#" class="list-group-item text-left">
                          <img class="img-thumbnail" src="data:image/jpeg;base64,{{comments.FotoComentarista}}">
                          <div class="post-user">
                          <label class="name">
                            <a href="/perfil/{{ comments.UsuarioCanonicoComentarista}}"> {{ comments.UsuarioComentarista}} </a>
                          </label>
                          <label class="comment">
                            {{ comments.comentarioNotificacion }}
                          </label>
                          </div>
                          <div class="fechaComentario">
                            <span> {{ comments.fechaNotificacion }}</span>
                          </div>
                       </li>
                    {% endfor %}
                </ul>
            </div>
                </div>
            </div>
  </div>
{% endif %}
{% endblock %}
